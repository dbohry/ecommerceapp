<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ecommerce.qgdagraciela.com.ecommerceapp.RegisterActivity">

    <EditText
        android:id="@+id/etCpf"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etNome"
        android:layout_alignStart="@+id/etNome"
        android:ems="10"
        android:hint="CPF"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etEndereco"
        android:layout_alignStart="@+id/etEndereco"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="62dp" />

    <EditText
        android:id="@+id/etEndereco"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etEstado"
        android:layout_alignStart="@+id/etEstado"
        android:ems="10"
        android:hint="EndereÃ§o"
        android:inputType="textPostalAddress"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="108dp" />

    <EditText
        android:id="@+id/etEstado"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etCidade"
        android:layout_alignStart="@+id/etCidade"
        android:ems="10"
        android:hint="Estado"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="154dp" />

    <EditText
        android:id="@+id/etCidade"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etTelefone"
        android:layout_alignStart="@+id/etTelefone"
        android:ems="10"
        android:hint="Cidade"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="200dp" />

    <EditText
        android:id="@+id/etTelefone"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etEmail"
        android:layout_alignStart="@+id/etEmail"
        android:ems="10"
        android:hint="Telefone"
        android:inputType="phone"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="246dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etSenha"
        android:layout_alignStart="@+id/etSenha"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="292dp" />

    <EditText
        android:id="@+id/etSenha"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bRegister"
        android:layout_alignStart="@+id/bRegister"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="338dp" />

    <Button
        android:id="@+id/bRegister"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:text="Registrar"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="384dp" />

</RelativeLayout>
